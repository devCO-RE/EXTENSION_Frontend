{
  "manifest_version": 2,
  "name": "Core Extension",
  "version": "1.0",

  "description": "A plain text description",
  "icons": {
    "192": "logo192.png"
  },
  "permissions": ["activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "logo192.png",
    "default_title": "Core-Chrome-Extension",
    "default_popup": "index.html"
  }
}
